<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<?import javafx.scene.image.Image?>
<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      style="-fx-background-radius: 14; -fx-background-color: #ffffff; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 6, 0, 0, 2);"
      prefHeight="88.0" prefWidth="380.0"
      fx:id="rootPane">

    <padding>
        <Insets top="14" right="16" bottom="14" left="16"/>
    </padding>

    <HBox spacing="14" alignment="CENTER_LEFT">
        <!-- Chấm tròn chưa đọc -->
        <Circle fx:id="unreadDot" radius="9" fill="#007bff" visible="false"/>

        <!-- Avatar người gửi (hoặc icon thông báo) -->
        <ImageView fx:id="imgAvatar" fitHeight="48.0" fitWidth="48.0" preserveRatio="true">
            <image>
                <Image url="@../image/notification_gray.png"/>
            </image>
        </ImageView>

        <!-- Nội dung -->
        <VBox spacing="4" HBox.hgrow="ALWAYS">
            <Label fx:id="lblTitle" text="Trần Thu Phương đã gửi lời mời kết bạn"
                   style="-fx-font-weight: bold; -fx-font-size: 14; -fx-text-fill: #1a1a1a;" wrapText="true"/>
            <Label fx:id="lblMessage" text="Chấp nhận ngay để cùng học tập nào!"
                   style="-fx-font-size: 13; -fx-text-fill: #555555;" wrapText="true"/>
            <Label fx:id="lblTime" text="2 phút trước"
                   style="-fx-font-size: 11; -fx-text-fill: #888888;"/>
        </VBox>
    </HBox>


</VBox>