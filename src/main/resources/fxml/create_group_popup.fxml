<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="450.0" prefWidth="400.0" style="-fx-background-color: white; -fx-border-color: #2f6e8a; -fx-border-width: 4; -fx-background-radius: 20;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.educonnec_dacs4.controllers.CreateGroupController">
    <VBox alignment="TOP_CENTER" layoutX="22.0" layoutY="4.0" prefHeight="446.0" prefWidth="361.0" spacing="10.0" style="-fx-background-radius: 30;" AnchorPane.bottomAnchor="4.0" AnchorPane.leftAnchor="22.0" AnchorPane.rightAnchor="21.0" AnchorPane.topAnchor="4.0">
        <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
        </padding>
        <Label style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #2f6e8a;" text="Tạo Nhóm Chat Mới" />

        <TextField fx:id="tfGroupName" promptText="Nhập tên nhóm chat" />

        <Label style="-fx-font-weight: bold;" text="Chọn thành viên (giữ Ctrl/Shift để chọn nhiều):" />

        <ListView fx:id="lvFriendsSelection" prefHeight="282.0" prefWidth="314.0" style="-fx-background-radius: 10;" VBox.vgrow="ALWAYS" />

        <HBox alignment="CENTER_RIGHT" spacing="10.0">
            <Button fx:id="btnCancel" mnemonicParsing="false" style="-fx-background-color: #ddd; -fx-text-fill: black;" text="Hủy" />
            <Button fx:id="btnCreate" mnemonicParsing="false" onAction="#handleCreateGroup" style="-fx-background-color: #2f6e8a; -fx-text-fill: white;" text="Tạo Nhóm" />
        </HBox>
    </VBox>
</AnchorPane>
