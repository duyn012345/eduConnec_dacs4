<AnchorPane prefHeight="500.0" prefWidth="420.0" style="-fx-background-color: #849a9a; -fx-background-radius: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 20, 0, 0, 10);" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.educonnec_dacs4.controllers.NotificationController">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <!-- Tiêu đề + icon chuông -->
    <AnchorPane layoutX="71.0" layoutY="31.0" prefHeight="67.0" prefWidth="289.0" style="-fx-background-radius: 30;">
      <AnchorPane layoutX="51.0" layoutY="4.0" prefHeight="48.0" prefWidth="42.0">
         <children>
              <ImageView fitHeight="32.0" fitWidth="32.0" layoutX="11.0" layoutY="15.0" preserveRatio="true">
                  <image>
                      <Image url="@../image/notification_gray.png" />
                  </image>
              </ImageView>
              <Label fx:id="lblUnreadCount" alignment="CENTER" contentDisplay="CENTER" graphicTextGap="0.0" prefHeight="32.0" prefWidth="32.0" style="-fx-background-color: #ff3b30; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 12;" text="3" textAlignment="CENTER" visible="false" />
         </children>
      </AnchorPane>
        <Label layoutX="114.0" layoutY="16.0" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1a1a1a;" text="Thông báo" textFill="WHITE" />
    </AnchorPane>

    <!-- Scroll danh sách thông báo -->
    <ScrollPane fitToWidth="true" layoutX="63.0" layoutY="107.0" prefHeight="381.0" prefWidth="338.0" style="-fx-background: #ffffff; -fx-background-color: transparent;">
        <VBox fx:id="notificationContainer" spacing="12" style="-fx-padding: 10 0 20 0;" />
    </ScrollPane>
   <Button fx:id="btnBack" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" text="quay lại" />

</AnchorPane>
