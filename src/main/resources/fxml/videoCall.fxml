<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="mainPane" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #1a1a1a;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.educonnec_dacs4.controllers.VideoCallController">

    <ImageView fx:id="remoteVideo" fitHeight="600.0" fitWidth="800.0" pickOnBounds="true" preserveRatio="false" style="-fx-background-color: black; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 10, 0, 0, 0);" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />

    <StackPane prefHeight="150.0" prefWidth="200.0" style="-fx-border-color: #3498db; -fx-border-width: 3; -fx-background-color: black; -fx-border-radius: 10; -fx-background-radius: 10;" AnchorPane.bottomAnchor="100.0" AnchorPane.rightAnchor="20.0">
        <ImageView fx:id="localVideo" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
    </StackPane>

    <Label fx:id="lblTargetName" alignment="CENTER" text="Đang gọi..." textFill="WHITE" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="20.0">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
        <padding>
            <Insets top="10.0" />
        </padding>
    </Label>

    <HBox alignment="CENTER" spacing="30.0" style="-fx-background-color: rgba(26, 26, 26, 0.7); -fx-padding: 10 0 10 0;" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">

        <Button fx:id="muteVideoButton" minHeight="50.0" minWidth="50.0" style="-fx-background-color: #34495e; -fx-background-radius: 25; -fx-cursor: hand;">
            <graphic>
                <ImageView fitHeight="24.0" fitWidth="21.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../image/muteVideo.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>

        <Button fx:id="endCallButton" minHeight="60.0" minWidth="60.0" onAction="#endCall" style="-fx-background-color: #e74c3c; -fx-background-radius: 30; -fx-cursor: hand;">
            <graphic>
                <ImageView fitHeight="31.0" fitWidth="33.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../image/endMeeet.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>

        <Button fx:id="muteAudioButton" minHeight="50.0" minWidth="50.0" style="-fx-background-color: #34495e; -fx-background-radius: 25; -fx-cursor: hand;">
            <graphic>
                <ImageView fitHeight="29.0" fitWidth="31.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../image/mutedMic.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>
    </HBox>
</AnchorPane>
